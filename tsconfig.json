{
  "compilerOptions": {
    "jsx": "react-jsx", // ✅ Necesario para que TypeScript entienda JSX
    "esModuleInterop": true, // ✅ Para permitir importar React por default (y evitar el error del import)
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@tokens/*": [
        "src/tokens/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ]
    }
  },
  "include": [
    "src"
  ]
}